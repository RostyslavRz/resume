{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<header>
    <div class="row">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#with navigation}}
                <div class="nav-item">
                    <a href={{links.[0].href}} class="nav-link">{{links.[0].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[1].href}} class="nav-link">{{links.[1].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[2].href}} class="nav-link disabled">{{links.[2].text}}</a>
                </div>
                {{/with}}
            </div>
        </div>
</header>

<main>
    <div class="row">
        <section class="col-8">
            <div>
                {{#with formBlock}}
                <h1>{{header}}</h1>
                <br>
                {{#with rating}}
                {{title}}: {{value}}
                {{/with}}
                <br>

                <div>
                    {{#with actionBlock}}
                    <div class="nav nav-tabs">
                        {{#each tabs}}
                        <div class="nav-item col-4">
                            <span class="nav-link {{#if isActive}}
                    active
                    {{/if}}"><b>{{text}}</b></span>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <hr>
                <div class="card ps-3">
                    {{#with report}}
                    {{title}}
                    <p><a href="{{button.link}}" class="btn btn-secondary mt-2">{{button.text}}</a></p>
                    {{/with}}
                </div>
                <hr>
                {{/with}}

                <div>
                    <h3 class="mb-5">{{feedbackBlock.title}}</h3>
                    {{#each feedbackBlock.buttons}}
                    <a href="{{link}}" class="btn {{#if isWarning}}
                                        btn-warning
                                        {{/if}}
                                        {{#if isSuccess}}
                                        btn-success
                                        {{/if}}
                                        {{#if isDanger}}
                                        btn-danger
                                        {{/if}}">{{text}}</a>

                    {{/each}}
                    <div>
                    </div>
                    {{/with}}
        </section>

        <section class="col-4 gy-3">
            <div>
                {{#with formBlock.goodsInfo}}
                <div class="card p-2 pe-5 mb-3">
                    <img src="{{photo}}">
                    <br>
                    <p>{{name}}</p>
                </div>
                <div class="card p-2 pe-5 mb-3">
                    <b>{{price}}</b>
                    <p>{{#if inMarket}}
                        Є в наявності
                        {{/if}}
                    </p>
                    {{#each buttons}}
                    <p><a href="{{link}}" class="btn {{#if isPrimary}}
                                                    btn-primary                    
                                                    {{/if}}
                                                    {{#if isSecondary}}
                                                    btn-secondary                    
                                                    {{/if}}">{{text}}</a></p>
                    {{/each}}
                </div>
                <div class="card ps-2">
                    {{seller.title}}: <b>{{seller.value}}</b>
                </div>

                {{/with}}
            </div>
        </section>
        <hr>
        {{> reviewItem}}
    </div>
    <hr>

    <div class="card text-bg-success text-center">
        {{#with service}}
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
        <p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>
        {{/each}}
        {{/with}}
    </div>
    <hr>
</main>

<footer>
    <div class=" row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{[0].link}} class="nav-item nav-link">{{[0].text}}</a>
                    <a href={{[1].link}} class="nav-item nav-link">{{[1].text}}</a>
                    <a href={{[2].link}} class="nav-item nav-link">{{[2].text}}</a>
                    <a href={{[3].link}} class="nav-item nav-link disabled">{{[3].text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>

