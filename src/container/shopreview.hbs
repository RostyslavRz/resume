                    <a href={{[2].link}} class="nav-item nav-link">{{[2].text}}</a>
                    <a href={{[3].link}} class="nav-item nav-link disabled">{{[3].text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>

