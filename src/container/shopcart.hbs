{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<header>
    <div class="row">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#with navigation}}
                <div class="nav-item">
                    <a href={{links.[0].href}} class="nav-link">{{links.[0].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[1].href}} class="nav-link">{{links.[1].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[2].href}} class="nav-link disabled">{{links.[2].text}}</a>
                </div>
                {{/with}}
            </div>
        </div>
</header>

<main class="col-12 gy-3">

    <div>
        <h1>{{header.title}}</h1>
        <a href={{header.button.link}} class="btn btn-outline-secondary">{{header.button.text}}</a>
        <br>
        <br>
    </div>
    <hr>
    <div>
        <div class="row gy-3">
            <div>
                {{#each goodsBlock}}
                {{> cartGoodsItem}}
                {{/each}}
            </div>
        </div>
        <hr>
        <div>
            {{#with total}}
            <h4>{{title}}</h4>
            <p>
            <h2>{{amount}}</h2>
            </p>
            <p>{{delivery}}</p>
            {{#each buttons}}
            <p><a href={{link}} class="btn 
                        {{#if isSuccess}}
                        btn-success
                        {{/if}}
                        {{#if isOutline}}
                        btn-outline-success
                        {{/if}}
            ">{{text}}</a></p>
            {{/each}}
            {{/with}}
        </div>
        <hr>
    </div>

    <div>
        <h4 class="text-center">{{goodsOtherBlock.title}}</h4>
        <br>
        <div class="row gy=4 gx-1 col-12">
            {{#each goodsOtherBlock.cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src={{image}}>
                    <div class="card-body">
                        <h5>{{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning">HOT</span>
                            {{/if}}
                            {{#if idNew}}
                            <span class="badge text-bg-primary">New</span>
                            {{/if}}
                        </h5>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <hr>

    <div class="card text-bg-dark ps-2">
        <h2>{{subscribe.header}}</h2>
        <p>{{subscribe.description}}</p>
        {{#each subscribe.buttons}}
        <div class="col-3 m-2">
            <a href={{link}} class="btn btn-primary">
                <p>{{text}}</p>
            </a>
        </div>
        {{/each}}
    </div>
    <br>
    <hr>
</main>

<footer>
    <div class="row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{[0].link}} class="nav-item nav-link">{{[0].text}}</a>
                    <a href={{[1].link}} class="nav-item nav-link">{{[1].text}}</a>
                    <a href={{[2].link}} class="nav-item nav-link disabled">{{[2].text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>

