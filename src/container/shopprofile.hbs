{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<header>
    <div class="row">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#with navigation}}
                <div class="nav-item">
                    <a href={{links.[0].href}} class="nav-link">{{links.[0].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[1].href}} class="nav-link">{{links.[1].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[2].href}} class="nav-link disabled">{{links.[2].text}}</a>
                </div>
                {{/with}}
            </div>
        </div>
</header>

<main class="col-12 gt-4">
    <h3>{{header}}</h3>
    <div class="row gy-4">
        <div class="col-12">
            <div class="nav nav-tabs">
                <div class="nav-item">
                    <span class="nav-link active"><b>{{purchase.tabs.[0]}}</b></span>
                </div>
                <div class="nav-item">
                    <span class="nav-link">{{purchase.tabs.[1]}}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row gx-1">
            <div class="col-4 mt-3">
                <input class="form-control" placeholder="{{purchase.actionBlock.input.placeholder}}">
            </div>
            <div class="col-4 mt-3">
                {{#each purchase.actionBlock.buttons}}
                <a href={{link}} class="btn 
                        {{#if isSuccess}}
                        btn-success
                        {{/if}}
                        {{#if isOutline}}
                        btn-outline-success
                        {{/if}}
                        {{#if isDanger}}
                        btn-outline-danger
                        {{/if}}
                        ">{{text}}</a>
                {{/each}}
            </div>
        </div>
        <hr>
        <div class="row gx-1">
            <div class="col-3">
                {{purchase.itemList.[0].number}}
                <p><b>{{purchase.itemList.[0].status}}</b></p>
            </div>
            <div class="col-1">
                {{purchase.itemList.[0].amount.title}}
                <p><b>{{purchase.itemList.[0].amount.value}}</b></p>
            </div>
            <div class="col-1 m-1 p-1">
                <image src="{{purchase.itemList.[0].images}}"></image>
            </div>
            <div class="col-1 m-1 p-1">
                <image src="{{purchase.itemList.[0].images}}"></image>
            </div>
            <div class="col-1 m-1 p-1">
                <image src="{{purchase.itemList.[0].images}}"></image>
            </div>
            <div class="col-2 m-1 p-1">
                <a href={{purchase.itemList.[0].button.link}} class="btn {{#if purchase.itemList.[0].button}}
                    btn-primary
                    {{/if}} text-end">{{purchase.itemList.[0].button.text}}</a>
            </div>


        </div>
        <hr>
    </div>

    <div class="col-12">
        {{#with userInfo}}
        <h4>{{title}}</h4>
        <div class="row gy-2 ps-2">
            <div class="card">
                <h5>{{profileData.title}}</h5>
            </div>

            <div class="card">
                <h5>{{recipients.title}}</h5>
            </div>

            <div class="card">
                <h5>{{contacts.title}}</h5>
            </div>
        </div>
        {{/with}}
    </div>




    <br>
    <hr>
</main>

<footer>
    <div class=" row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{[0].link}} class="nav-item nav-link">{{[0].text}}</a>
                    <a href={{[1].link}} class="nav-item nav-link">{{[1].text}}</a>
                    <a href={{[2].link}} class="nav-item nav-link disabled">{{[2].text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>







