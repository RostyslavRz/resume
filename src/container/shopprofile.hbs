{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<header>
    <div class="row">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#with navigation}}
                <div class="nav-item">
                    <a href={{links.[0].href}} class="nav-link">{{links.[0].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[1].href}} class="nav-link">{{links.[1].text}}</a>
                </div>
                <div class="nav-item">
                    <a href={{links.[2].href}} class="nav-link disabled">{{links.[2].text}}</a>
                </div>
                {{/with}}
            </div>
        </div>
</header>

<main class="col-12 gt-4">
    <h3>{{header}}</h3>
    <div class="row gy-4">
        <div class="col-12">
            <div class="nav nav-tabs">
                <div class="nav-item">
                    <span class="nav-link active"><b>{{purchase.tabs.[0]}}</b></span>
                </div>
                <div class="nav-item">
                    <span class="nav-link">{{purchase.tabs.[1]}}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row gx-1">
            <div class="col-4 mt-3">
                <input class="form-control" placeholder="{{purchase.actionBlock.input.placeholder}}">
            </div>
            <div class="col-4 mt-3">
                {{#each purchase.actionBlock.buttons}}
                <a href={{link}} class="btn 
                        {{#if isSuccess}}
                        btn-success
                        {{/if}}
                        {{#if isOutline}}
                        btn-outline-success
                        {{/if}}
                        {{#if isDanger}}
                        btn-outline-danger
                        {{/if}}
                        ">{{text}}</a>
                {{/each}}
            </div>
        </div>
    </div>
    <hr>

    <div>
        {{#each purchase.itemList}}
        {{> purchaseItem}}
        {{/each}}
        <hr>
    </div>


    <div>
        {{#with userInfo}}
        <h4>{{title}}</h4>

        <div class="card mt-2 mb-3 px-2">
            <p>
            <h5>{{profileData.title}}</h5>
            </p>
            <div class='card m-1'>
                <div class="row gx-1 m-2">
                    {{#with profileData.fullName}}
                    <div class="col-4 p-1">
                        <p>{{surname.title}}</p>
                        <p>{{surname.value}}</p>
                    </div>
                    <div class=" col-4">
                        <p>{{name.title}}</p>
                        <p>{{name.value}}</p>
                    </div>
                    <div class=" col-4">
                        <p>{{middleName.title}}</p>
                        <p>{{middleName.value}}</p>
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class='card m-1'>
                <div class="row gx-1 m-2">
                    {{#with profileData.otherInfo}}
                    <div class="col-4 p-1">
                        <p>{{birthday.title}}</p>
                        <p>{{birthday.value}}</p>
                    </div>
                    <div class=" col-4">
                        <p>{{sex.title}}</p>
                        <p>{{sex.value}}</p>
                    </div>
                    <div class=" col-4">
                        <p>{{language.title}}</p>
                        <p>{{language.value}}</p>
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class='card m-1'>
                <div class="row gx-1 m-2">
                    {{#each buttons}}
                    <div class="col-4 p-1 pb-0">
                        <a href={{link}} class="btn 
                        {{#if isPrimary}}
                        btn-primary
                        {{/if}}
                        {{#if isSecondary}}
                        btn-outline-secondary
                        {{/if}}
                        {{#if isDanger}}
                        btn-outline-danger
                        {{/if}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3 px-2">
        <h5>{{recipients.title}}</h5>
        <div class="row gx-2">
            {{#each recipients.users}}
            <div class="card col-4 m-4">
                <p>{{name}}</p>
                <p>{{phone}}</p>
                {{#with button}}
                <p><a href={{link}} class="btn btn-primary">{{text}}</a></p>
                {{/with}}
            </div>
            {{/each}}
        </div>
    </div>

    <div class="card px-2">
        <h5>{{contacts.title}}</h5>
        <div class="row gx-2">
            {{#each contacts.contactData}}
            <div class="card col-3 m-4">
                <p>{{title}}</p>
                <p>{{value}}</p>
                {{#with button}}
                <p><a href={{link}} class="btn {{#if isPrimary}}
                        btn-primary
                        {{/if}}
                        {{#if isSecondary}}
                        btn-outline-secondary
                        {{/if}}
                        {{#if isDanger}}
                        btn-outline-danger
                        {{/if}}">{{text}}</a></p>
                {{/with}}
            </div>
            {{/each}}
        </div>
    </div>

    {{/with}}
    </div>

    <br>
    <hr>
</main>

<footer>
    <div class=" row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{[0].link}} class="nav-item nav-link">{{[0].text}}</a>
                    <a href={{[1].link}} class="nav-item nav-link">{{[1].text}}</a>
                    <a href={{[2].link}} class="nav-item nav-link disabled">{{[2].text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>

