{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>

    <div class="row">
        <div class="col-12">
            <div class="nav mb-4">
                {{#with navigation}}
                {{#each links}}
                <div class="nav-item">
                    <a href={{href}} class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <div class="nav-item">
                    <a href="#" class="nav-link disabled">Disabled</a>
                </div>
                {{/with}}
            </div>
            <div class="mt-2 ms-2">
                <ol class="breadcrumb">
                    {{#each breadcrumb}}
                    <li class="breadcrumb-item">
                        <a href={{url}}>{{name}}</a>
                    </li>
                    {{/each}}
                    <li class="breadcrumb-item">Disabled</li>
                </ol>
            </div>
            <br>

            <div>
                <h2>{{header}}</h2>
                <div class="row mb-5">
                    {{#each sortBlock}}
                    <div class="col-3 me-2">
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option valeu="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="row gx-2">
                <section class="card col-4 p-2">
                    {{#with filterBlock}}
                    <div class="form-label">{{sellers.title}}</div>
                    {{#each sellers.list}}
                    <div class="form-check">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}

                    <hr>
                    <div>
                        {{#with brands}}
                        <div class="form-label">{{title}}</div>
                        <input type="text" class="form-control" placeholder={{input.placeholder}}>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{value}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>

                    <hr>
                    <div>
                        {{#with price}}
                        <div class="form-label">{{title}}</div>
                        <input type="text" class="form-control" placeholder="{{range.from}}">
                        <br>
                        <input type="text" class="form-control" placeholder="{{range.to}}">
                        <br>
                        <a href={{button.link}} class="btn btn-outline-secondary">{{button.text}}</a>
                        {{/with}}
                    </div>

                    <hr>
                    <div>
                        {{#each filterList}}
                        <div class="form-label">{{title}}</div>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{value}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                        <hr>
                        {{/each}}
                    </div>
                    {{/with}}
                </section>

                <div class="col-8 gx-2 gy-2 ps-4 mt-o">
                    <div class="row">
                        {{#each goodsList}}
                        {{> catalogItem}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <br>

            <div class="mt-3 mb-3">
                {{#with service}}
                <div class="card text-bg-success text-center">
                    <div class="card-body">
                        <h2 class="card-title">{{title}}</h2>
                        <p>{{description}}</p>
                        <a href={{link}} class="btn btn-primary">{{text}}</a>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="row">
                <hr>
                {{#each footer}}
                <div class="col-2">
                    <div class="nav flex-column">
                        <div class="nav-item">
                            <a href={{[0].link}} class="nav-item nav-link">{{[0].text}}</a>
                            <a href={{[1].link}} class="nav-item nav-link">{{[1].text}}</a>
                            <a href={{[2].link}} class="nav-item nav-link">{{[2].text}}</a>
                            <a href={{[3].link}} class="nav-item nav-link disabled">{{[3].text}}</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</main>

