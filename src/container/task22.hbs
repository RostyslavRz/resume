<br>
<ul>
    <p>
    <h1 class="text-center">{{page_header.title}}
    </h1>
    </p>
    <p class="text-center text-uppercase">{{page_header.description}}</p>
</ul>
<hr>
<ul>
    {{#with section}}
    <p class="display-6 text-end">{{about_us.title_list.main}}</p>
    <br>
    <p>
    <h2 class="text-end">{{about_us.title_list.sub}}</h2>
    </p>
    <p><button class="btn btn-outline-info">{{about_us.button.text}}</button></p>
    <br>
    <br>

    {{#with advantage}}
    <p class="display-5">{{title}}</p>
    <div class="card">
        <div class="card-body">
            <p class="display-4">{{efficiency.title}}</p>
            <p>
            <h6>{{efficiency.sub_title}}</h6>
            </p>
            <p>{{efficiency.description}}</p>
            <p><button class="btn btn-outline-warning">{{efficiency.button}}</button></p>
        </div>
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            <p class="display-4 text-center">{{innovation.title}}</p>
            <p>
            <h6 class="text-center">{{innovation.sub_title}}</h6>
            </p>
            <p class="text-center">{{innovation.description}}
            </p>
            <p><button class="btn btn-outline-warning">{{innovation.button}}</button></p>
        </div>
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            <p class="display-4 text-end">{{collaboration.title}}</p>
            <p>
            <h6 class="text-end">{{collaboration.sub_title}}</h6>
            </p>
            <p class="text-end">{{collaboration.description}}
            </p>
            <p><button class="btn btn-outline-warning">{{collaboration.button}}</button></p>
        </div>
    </div>
    {{/with}}
    <br>
    {{#with agreement}}
    <p class="display-5">{{title}}</p>
    <div class="card">
        <div class="card-body">
            <p>
            <h5>{{info.sub_title}}</h5>
            </p>
            <div class="card">
                <div class="card-body">
                    <p>{{info.detail.text}}</p>
                    <p><button class="btn btn-success">{{info.detail.button}}</button></p>
                </div>
            </div>

        </div>
    </div>
    {{/with}}
    {{/with}}
</ul>


