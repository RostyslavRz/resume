{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <div>
            <h1>{{name}}</h1>
            <p>{{age}}, {{gender}}</p>
            {{#with address}}
            <em>{{street}}, {{city}}, {{state}},{{zip}}, {{country}}</em>
            {{/with}}
        </div>
    {{/with}}
</div>

<br>
<hr>
<div>
    <section>
        {{>title data="My education"}}
        <ul>
            {{#each person.education}}
                <li><p>{{degree}}</p></li>
                <li><p>{{major}}</p></li>
                <li><p>{{university}}, ({{graduationYear}})</p></li> 
            {{/each}}
        </ul>
    </section>
</div>

<br>
<hr>
<div>
    <section>
        {{>title data="Work experience"}}
        <ul>
            {{#each person.workExperience}}
                <li><em>{{title}}</em></li>
                <p>{{startDate}} - {{endDate}}</p>
                    <ul>
                        {{#if responsibilities}}
                            <li>Developed new features for Google Maps</li>
                            <li>Worked on improving search algorithms</li>
                        {{/if}}
                    </ul>
                <p><h4>{{company}} ({{year_founded}}, {{industry}})</h4></p>
                
                Employees
                    <ul>
                        {{#each employees}}
                            <li>{{name}}</li>
                            {{position}}
                            <br>
                            {{department}}
                            <br>
                            <br>
                            <b>Projects:</b>
                            <li>
                                {{#each projects}}
                                {{name}}, ({{status}})
                                <br>
                                {{description}}
                                <br>
                                <hr>
                                    <ul>
                                        Teams:
                                        <br>
                                        <br>
                                            {{#each teams}}
                                                <em>"{{team_name}}"</em>
                                                <br>
                                                    {{#with team_leader}}
                                                       ({{title}}: {{name}}, {{email}}) 
                                                    {{/with}}
                                                <br>
                                                    <ul>
                                                    {{#each team_members}}
                                                        <li>{{name}}</li>
                                                        {{ title}}, {{email}} 
                                                        <br>
                                                        ({{skills}})
                                                            <ol>
                                                                <li>{{#each projects}}
                                                                    <p>{{name}} - {{description}} ({{technologies}})</p>
                                                                    <br>
                                                                        {{#each team_members}}
                                                                            <ul>
                                                                            <li>{{title}}, {{name}}</li>
                                                                            </ul>
                                                                        {{/each}}
                                                                    {{/each}}
                                                                </li>
                                                            </ol>
                                                    {{/each}} 
                                                    </ul>
                                            {{/each}}
                                    </ul>
                                {{/each}}
                            </li>
                        {{/each}}
                    </ul>
                    <br>
            {{/each}}
        </ul>
    </section>
</div>

